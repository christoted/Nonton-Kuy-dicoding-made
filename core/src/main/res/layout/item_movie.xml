<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="130dp"
    android:layout_height="175dp"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageViewMovie"
            android:layout_width="150dp"
            android:layout_height="135dp"
            android:adjustViewBounds="true"
            android:scaleType="fitXY"
            android:src="@color/teal_200"
          />

        <TextView
            android:id="@+id/textViewTitleMovie"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageViewMovie"
            android:text="Talking with Ted"
            android:gravity="center_horizontal"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/textViewTitleReleaseDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textViewTitleMovie"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="21 April 2020"
            android:textSize="12sp"
            android:textStyle="normal" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>